 <!-- Name Item -->
<div class="item">
    <div>Student´s Name</div>
    <div>
        <input type="text" name="name" placeholder="Type Student´s Name" value="{{student.name}}">
    </div>
</div>

<!-- Avatar_URL Item -->
<div class="item">
    <div>Avatar URL</div>
    <div>
        <input type="url" name="avatar_url" placeholder="https://" value="{{student.avatar_url}}">
    </div>
</div>

<!-- Birth_Date Item -->
<div class="item">
    <div>Birth Date</div>
    <div>
        <input type="date" name="birth_date" placeholder="" value="{{student.birth_date}}">
    </div>
</div>            

<!-- Email Item -->
<div class="item">
    <div>Email</div>
    <div>
        <input type="email" name="email" placeholder="Type a valid email" value="{{student.email}}">
    </div>
</div>


<!-- Current_Year Item -->
<div class="item">
    <div>Current Year</div>
    <div>
        <select name="current_year" >

            <option value="6"
                {% if student.current_year == "6" %}
                    selected
                {% endif %}
                >6º year of Fundamental II
            </option>

            <option value="7"
                {% if student.current_year == "7" %}
                    selected
                {% endif %}
                >7º year of Fundamental II
            </option>

            <option value="8"
                {% if student.current_year == "8" %}
                    selected
                {% endif %}
                >8º year of Fundamental II
            </option>

            <option value="9"
                {% if student.current_year == "9" %}
                    selected
                {% endif %}
                >9º year of Fundamental II
            </option>

            <option value="10"
                {% if student.current_year == "10" %}
                    selected
                {% endif %}
                >1º year of High School
            </option>

            <option value="11"
                {% if student.current_year == "11" %}
                    selected
                {% endif %}
                >2º year of High School
            </option>

            <option value="12"
                {% if student.current_year == "12" %}
                    selected
                {% endif %}
                >3º year of High School
            </option>             
  
        </select>
    </div>
</div>  

<!-- Week_hours Item -->
<div class="item">
    <div>Week Hours</div>
    <div>
        <input type="number" name="week_hours" placeholder="Number of hours" value="{{student.week_hours}}">
    </div>
</div>

<div class="item">
    <div>Teacher</div>
    <div>
        <select name="teacher">
            {% for teacher in teacherOptions %}

                <option 
                    value="{{teacher.id}}" 
                        {% if student.teacher_id == teacher.id %}
                            selected
                        {%endif%}
                    >{{teacher.name}}
                </option>

            {% endfor %}
            
        </select>
    </div>
</div>


<button type="submit">Save</button>