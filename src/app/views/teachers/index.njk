{% extends "layout.njk" %}

{% set pageId = "page-index-all" %}
{% set page = "School Index Teacher" %}

<!-- STYLES PAGE -->
{% block styles %}
    <link rel="stylesheet" href="/styles/header.css">
    <link rel="stylesheet" href="/styles/index-pages-all.css">
{% endblock styles %}     

<!-- PAGE CONTENT -->
{% block content %}

    {% include "partials/header.njk"%}
    
    <div class="card table-container">  

        <div class="header-filter">

            <a id="btn-create" href="/teachers/create">New</a>
            <form action="/teachers" method="get">
                <input type="text" name="filter" placeholder="Name or Subjects" value="{{filter}}">
                <button type="submit">Filter</button>
            </form>

        </div>


        <table width="100%">
            <thead>
                <tr>
                    <th>Teacher</th>
                    <th>Subjects</th>
                    <th>Students</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                {% for teacher in teachers %}
                    <tr>
                        <td>
                        <span style="background-image: url( {{ teacher.avatar_url }} )"></span>
                        {{teacher.name}}</td>
                        <td>{{teacher.subjects_taught}}</td>
                        <td>{{teacher.total_students}}</td>
                        <td><a href="/teachers/{{teacher.id}}">Show</a></td>
                    </tr>
                {% endfor %}                
            </tbody>
        </table>

        
        <div class="pagination"
            data-page={{pagination.page}}
            data-total={{pagination.total}} 
            data-filter={{filter}}   
        ></div>

    </div>    
    
    
{% endblock content %}
   
<!-- MODAL -->
{% block modal %}    
{% endblock modal %} 

<!-- SCRIPTS -->
{% block scripts %}
    
    <script src="/scripts/paginatePages.js"></script>
    
{% endblock scripts %} 



