{% extends "layout.njk" %}

{% set pageId = "page-edit" %}
{% set page = "School Edit Teacher" %}

<!-- STYLES PAGE -->
{% block styles %}
    <link rel="stylesheet" href="/styles/header.css">
    <link rel="stylesheet" href="/styles/edit.css">
{% endblock styles %}    

<!-- PAGE ID BEGIN -->

<!-- PAGE CONTENT -->
{% block content %}

    <!-- INCLUDE DO HEADER -->
    {% include "partials/header.njk"%}

    <!-- PAGE CONTENT -->

    <!-- FORM CONTENT -->
    <div class="card">

        <!-- SECTION AVATAR -->
        <section class="avatar" style="background:url('{{teacher.avatar_url}}') no-repeat center center /cover" ></section>

        <!-- SECTION ITENS -->
        <section class="description">

            <form method="post" action="/teachers?_method=PUT">

                <h3>Edit Teacher</h3>
                
                {% include "teachers/fields.njk"%}

                 <input type="hidden" name="id" value={{teacher.id}}> 

            </form>


            <form id="form-delete" method="POST" action="/teachers?_method=DELETE">  
                <input type="hidden" name="id" value={{teacher.id}}> 
                <button  type="submit">Delete</button>       
            </form>
           
        </section>

    </div>

   
    <!-- INCLUDE DO FOOTER -->    
        
{% endblock content %}

<!-- PAGE ID END -->
   
<!-- MODAL -->
{% block modal %}    
{% endblock modal %} 

<!-- SCRIPTS -->
{% block scripts %}
    <script src="/scripts/confirmDelete.js"></script>
{% endblock scripts %} 